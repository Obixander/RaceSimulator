@page "/"
@using Entities
@using Microsoft.AspNetCore.SignalR.Client
@using Services
@inject SignalRService Hub
<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

@if (testdata != null)
{
    <p>@testdata.Name</p>
    <p>@testdata.CurrentLap</p>
}

@code{
    private Race testdata;
    protected override async Task OnInitializedAsync()
    {
        try
        {
            await Hub.StartConnectionAsync();
            if (Hub.HubConnection.State == HubConnectionState.Connected)
            {
                Console.WriteLine("Connection made succesfully");


                Hub.HubConnection.On<Race>("RaceUpdate", async (race) =>
                {
                    Console.WriteLine("RaceUpdate received.");
                    var test = race;
                    Console.WriteLine(test.Name);
                    Console.WriteLine(test.CurrentLap);
                    testdata = test;
                    await InvokeAsync(StateHasChanged);

                });

                Hub.HubConnection.On<object[]>("CarCrossedLine", async (racers) =>
                {
                    Console.WriteLine($"CarCrossedLine received. {racers[0]}");
                    int count = 0;
                    Console.WriteLine("State about to change");
                    foreach (var item in racers)
                    {
                        testdata.Racers[count] = (Car)item;
                    }
                    await InvokeAsync(StateHasChanged);
                    Console.WriteLine("State should have changed");
                });

                Hub.HubConnection.InvokeAsync<Task>(nameof(IRaceHub.StartRace), "Formula One", 5);
            };
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }
}