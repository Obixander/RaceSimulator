@page "/"
@using Entities
@using Microsoft.AspNetCore.SignalR.Client
@using Services
@inject SignalRService Hub
<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

@if (testdata != null)
{
    <p>@testdata.Name</p>
    <p>@testdata.CurrentLap</p>
}


@code{
    private Race testdata;
    protected override async Task OnInitializedAsync()
    {
        try
        {
            await Hub.StartConnectionAsync();
            Hub.HubConnection.On<Race>(nameof(IRaceHub.RaceUpdate), async (race) =>
            {
                testdata = race;
                await InvokeAsync(StateHasChanged);
            });

            Hub.HubConnection.On<List<Car>>(nameof(IRaceHub.CarCrossedLine), async (racers) =>
            {
                testdata.Racers = racers;
                await InvokeAsync(StateHasChanged);
            });

            if (Hub.HubConnection.State == HubConnectionState.Connected)
            {
                await Hub.HubConnection.InvokeAsync<Task>(nameof(IRaceHub.StartRace), "Formula One", 5);
            };
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }

    }
}